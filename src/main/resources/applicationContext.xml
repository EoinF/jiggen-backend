<beans xmlns = "http://www.springframework.org/schema/beans"
       xmlns:xsi = "http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context = "http://www.springframework.org/schema/context"
       xsi:schemaLocation = "http://www.springframework.org/schema/beans
   http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
   http://www.springframework.org/schema/context
   http://www.springframework.org/schema/context/spring-context-3.0.xsd">
    <context:annotation-config/>

    <bean id="Application" class="com.github.eoinf.jiggen.Application">
        <constructor-arg ref="puzzleDao" />
        <constructor-arg ref="templateDao" />
        <constructor-arg ref="backgroundDao" />
        <constructor-arg ref="jsonTransformer" />
    </bean>

    <bean id="puzzleDao" class="com.github.eoinf.jiggen.dao.PuzzleRepoDao" />
    <bean id="templateDao" class="com.github.eoinf.jiggen.dao.TemplateRepoDao" />
    <bean id="backgroundDao" class="com.github.eoinf.jiggen.dao.BackgroundRepoDao" />
    <bean id="jsonTransformer" class="com.github.eoinf.jiggen.JsonTransformer" />
    <bean id="fileManager" class="com.github.eoinf.jiggen.JiggenFileManager" />
</beans>